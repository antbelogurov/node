header(class='cat_header')
    include cat_header
.container
    .row.mt-5
        .col.col-md-12 
            h1=goods[0]['name']
        .row.mt-5
            .col.col-md-4 
                img(src='img/'+goods[0]['image'])
            .col.col-md-8
                    h4.my-2=goods[0]['description']
                    h5 Цена: #{goods[0]['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} uah
                    a(class="btn btn-primary text-white" data-goods_id=goods[0]['id'] href="#") to cart
